{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@domain/*": ["./domain/*"],
      "@data/*": ["./data/*"],
      "@infra/*": ["./infra/*"],
      "@presentation/*": ["./presentation/*"],
      "@main/*": ["./main/*"],
      "@validation/*": ["./validation/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
